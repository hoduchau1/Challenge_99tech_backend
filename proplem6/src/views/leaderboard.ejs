<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard</title>
    <script src="/socket.io/socket.io.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 50%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .highlight {
            background-color: #ffeb3b !important;
            font-weight: bold;
        }

        .update-msg {
            color: green;
            font-weight: bold;
            margin-top: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <h1>Leaderboard</h1>
    <p class="update-msg">ðŸŽ‰ The leaderboard has just been updated!</p>
    
    <table id="leaderboard">
        <tr>
            <th>Rank</th>
            <th>Player</th>
            <th>Score</th>
        </tr>
        <% topScores.forEach((user, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= user.username %></td>
                <td><%= user.score %></td>
            </tr>
        <% }) %>
    </table>

    <script>
        const socket = io();

        socket.on("connect", () => {
            console.log("âœ… Connected to WebSocket!");
        });

        socket.on("updateLeaderboard", (topScores) => {
            console.log("ðŸ“Š Received leaderboard data:", topScores);
            
            const table = document.getElementById("leaderboard");
            table.innerHTML = `
                <tr>
                    <th>Rank</th>
                    <th>Player</th>
                    <th>Score</th>
                </tr>
            `;

            let newRowAdded = false;

            topScores.forEach((user, index) => {
                const row = document.createElement("tr");
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${user.username}</td>
                    <td>${user.score}</td>
                `;
                
                // Highlight the top player when leaderboard updates
                if (index === 0) {
                    row.classList.add("highlight");
                    newRowAdded = true;
                }

                table.appendChild(row);
            });

            // Show leaderboard update message
            if (newRowAdded) {
                const msg = document.querySelector(".update-msg");
                msg.style.display = "block";
                setTimeout(() => {
                    msg.style.display = "none";
                }, 3000);
            }
        });
    </script>
</body>
</html>
